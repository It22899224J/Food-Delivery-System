{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "monorepo": true,
  "projects": {
    "apiGateway": {
      "type": "application",
      "root": "apps/apiGateway",
      "entryFile": "main",
      "sourceRoot": "apps/apiGateway/src"
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "delivery": {
      "type": "application",
      "root": "apps/delivery",
      "entryFile": "main",
      "sourceRoot": "apps/delivery/src",
      "compilerOptions": {
        "tsConfigPath": "apps/delivery/tsconfig.app.json"
      }
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification/tsconfig.app.json"
      }
    },
    "order": {
      "type": "application",
      "root": "apps/order",
      "entryFile": "main",
      "sourceRoot": "apps/order/src",
      "compilerOptions": {
        "tsConfigPath": "apps/order/tsconfig.app.json"
      }
    },
    "payment": {
      "type": "application",
      "root": "apps/payment",
      "entryFile": "main",
      "sourceRoot": "apps/payment/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment/tsconfig.app.json"
      }
    },
    "restaurant": {
      "type": "application",
      "root": "apps/restaurant",
      "entryFile": "main",
      "sourceRoot": "apps/restaurant/src",
      "compilerOptions": {
        "tsConfigPath": "apps/restaurant/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}